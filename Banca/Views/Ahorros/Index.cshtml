<div class="input-group mb-3">
    <div class="input-group-prepend">
        <span class="input-group-text" id="">Número de cuenta</span>
    </div>
    <input type="text" class="form-control" placeholder="####" aria-describedby="basic-addon2">
    <div class="input-group-append">
        <button class="btn btn-secondary" type="button">Buscar</button>
    </div>
</div>

<hr />

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                Cliente
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDeRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstaActivo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)
                </td>
                <td>
                    <a asp-action="Details" asp-controller="Clientes" asp-route-id="@item.ClienteId">
                        @Html.DisplayFor(modelItem => item.Cliente.NombreCompleto)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nota)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeRegistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstaActivo)
                </td>
                <td>
                    <a href="~/ahorros/@item.Id/depositar">Depositar</a> |
                    <a href="~/ahorros/@item.Id/retirar">Retirar</a> |
                    @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                    <a href="~/ahorros/@item.Id/detalles">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
